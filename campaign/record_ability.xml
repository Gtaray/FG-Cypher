<root>
	<windowclass name="ability" copy="record_window">
		<minimize>minimized_reference</minimize>
		<script>
			function onLockChanged()
				super.onLockChanged();

				if actions.subwindow then
					actions.subwindow.update();
				end
			end
		</script>
		<sheetdata>
			<sub_record_header name="header">
				<class>ability_header</class>
			</sub_record_header>

			<subwindow_record name="main">
				<class>ability_main</class>
				<activate />
			</subwindow_record>
			<subwindow_record name="actions">
				<class>tab_actions</class>
			</subwindow_record>

			<scrollbar_record>
				<target>main</target>
			</scrollbar_record>
			<scrollbar_record>
				<target>actions</target>
			</scrollbar_record>

			<tabs_recordsheet name="tabs">
				<gmvisibleonly />
				<tab>
					<icon>tab_main</icon>
					<subwindow>main</subwindow>
				</tab>
				<tab>
					<icon>tab_actions</icon>
					<subwindow>actions</subwindow>
				</tab>
			</tabs_recordsheet>
			
			<resize_referencepage />
			<close_referencepage />
		</sheetdata>
	</windowclass>

	<windowclass name="ability_header">
		<margins control="0,0,0,7" />
		<script file="common/scripts/record_header_simple.lua" />
		<sheetdata>
			<link_record_header>
				<class>ability</class>
			</link_record_header>

			<anchor_record_header_right />
			<icon_record_locked />
			<button_record_locked />

			<string_record_name name="name" />
			<label_recordtype name="recordtype_label">
				<static textres="library_recordtype_ref_ability" />
			</label_recordtype>
		</sheetdata>
	</windowclass>

	<windowclass name="ability_main">
		<margins control="0,0,0,2" />
		<script>
			function onInit()
				update();
			end
			function update()
				local bReadOnly = WindowManager.getReadOnlyState(getDatabaseNode());
				local bHasCost = cost.getValue() ~= 0 and coststat.getValue() ~= "-";
				local bShowCost = bHasCost or not bReadOnly;
				local bHasRecharge = period.getValue() ~= "-";

				WindowManager.callSafeControlUpdate(self, "type", bReadOnly);
				usetype.setReadOnly(bReadOnly);
				useequipped.setReadOnly(bReadOnly);
				period.setReadOnly(bReadOnly);

				header_cost.setVisible(bShowCost);
				costtext1.setVisible(bShowCost);
				cost.setReadOnly(bReadOnly);
				cost.setVisible(bShowCost);
				label_cost.setVisible(bShowCost);
				costtext2.setVisible(bShowCost);
				label_coststat.setVisible(bShowCost);
				coststat.setVisible(bShowCost);
				coststat.setReadOnly(bReadOnly);
				costtext3.setVisible(bShowCost);
				
				ftdesc.setReadOnly(bReadOnly);
			end
		</script>
		<sheetdata>
			<anchor_column name="columnanchor" />

			<header_column name="header_properties">
				<static textres="power_header_properties" />
				<center />
			</header_column>
			
			<label_column name="type_label">
				<static textres="ability_label_type" />
			</label_column>
			<string_columnh name="type" />
			<label_column name="usetype_label">
				<static textres="ability_label_use_type" />
			</label_column>
			<cycler_column name="usetype">
				<anchored width="80" />
				<parameters>
					<labelsres>ability_usetype_enabler|ability_usetype_action</labelsres>
					<values>Enabler|Action</values>
					<defaultlabelres>dash</defaultlabelres>
				</parameters>
				<tooltip textres="power_tooltip_useequipped" />
			</cycler_column>
			<label_column name="useequipped_label">
				<static textres="power_label_useequipped" />
			</label_column>
			<cycler_column name="useequipped">
				<anchored width="80" />
				<parameters>
					<labelsres>yes</labelsres>
					<values>yes</values>
					<defaultlabelres>no</defaultlabelres>
				</parameters>
				<tooltip textres="power_tooltip_useequipped" />
			</cycler_column>
			<label_column name="period_label">
				<static textres="power_label_recharge_on" />
			</label_column>
			<cycler_column name="period">
				<anchored width="200" />
				<parameters>
					<labelsres>power_recharge_any|power_recharge_first|power_recharge_last|power_recharge_manual</labelsres>
					<values>any|first|last|manual</values>
					<defaultlabelres>dash</defaultlabelres>
				</parameters>
			</cycler_column>

			<!-- COST -->
			<header_column name="header_cost">
				<static textres="power_header_cost" />
				<center />
			</header_column>
			<label_column name="costtext1">
				<anchored>
					<top offset="20" />
				</anchored>
				<static textres="power_label_cost_texft_1" />
			</label_column>
			<number_column name="cost">
				<anchored to="costtext1" width="25" height="20">
					<top offset="20" />
					<left anchor="right" relation="relative" offset="10" />
				</anchored>
				<min>0</min>
			</number_column>
			<label_fieldtop name="label_cost">
				<anchored to="cost" />
				<static textres="power_label_cost" />
			</label_fieldtop>
			<label name="costtext2">
				<anchored to="cost" width="93">
					<top />
					<left anchor="right" relation="relative" offset="10" />
				</anchored>
				<static textres="power_label_cost_texft_2" />
			</label>
			<button_stat name="coststat">
				<anchored to="cost" width="70" height="20">
					<top />
					<left anchor="right" relation="relative" offset="10" />
				</anchored>
				<tooltip textres="power_tooltip_coststat" />
			</button_stat>
			<label_fieldtop name="label_coststat">
				<anchored to="coststat" />
				<static textres="power_label_coststat" />
			</label_fieldtop>
			<label name="costtext3">
				<anchored to="cost" width="40">
					<top />
					<left anchor="right" relation="relative" offset="10" />
				</anchored>
				<static textres="power_label_cost_texft_3" />
			</label>			

			<!-- DESCRIPTION -->
			<header_column name="header_desc">
				<static textres="power_header_description" />
				<center />
			</header_column>

			<string_column_full name="description">
				<readonly />
				<invisible />
			</string_column_full>

			<basicft name="ftdesc">
				<anchored>
					<top parent="columnanchor" anchor="bottom" relation="relative" offset="7" />
					<left offset="5" />
					<right offset="-5" />
				</anchored>
				<script>
					function onInit()
						local oldDesc = window.description.getValue();
						if oldDesc == "" then
							return;
						end
						
						local aDescriptionSplit,_ = StringManager.split(oldDesc, "\n", true);
						
						local sFormattedString = "";
						for _,sDescFragment in pairs(aDescriptionSplit) do
							sFormattedString = sFormattedString .. "&lt;p&gt;" .. sDescFragment .. "&lt;/p&gt;";
						end
						
						setValue(sFormattedString);
						window.description.setValue("");
					end
				</script>
				<tabtarget prev="modifier" />
			</basicft>
		</sheetdata>
	</windowclass>
</root>
