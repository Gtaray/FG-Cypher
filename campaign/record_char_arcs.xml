<root>
	<windowclass name="charsheet_arcs">
		<sheetdata>
			<frame_char name="arcframe">
				<bounds>15,0,-29,-5</bounds>
			</frame_char>
			<label_frametop name="header_arcs">
				<anchored to="arcframe" />
				<static textres="char_label_arcs" />
			</label_frametop>

			<windowlist name="arcs">
				<anchored to="arcframe">
					<left offset="15" />
					<top offset="35" />
					<right offset="-20" />
					<bottom offset="-20" />
				</anchored>
				<class>char_arc</class>
				<datasource>.characterarcs</datasource>
				<script>
					function addEntry()
						local w = createWindow();

						local record = Interface.openWindow("record_arc", w.getDatabaseNode());
						record.focusName();

						window.arcs_iadd.onCostUpdated();
						return w;
					end
				</script>
			</windowlist>
			<scrollbar_list>
				<anchored to="arcs" />
				<target>arcs</target>
			</scrollbar_list>

			<button_iedit name="arcs_iedit">
				<anchored to="arcs" position="aboveright" offset="-13,5" />
				<edittarget>arcs</edittarget>
			</button_iedit>
			<button_iadd name="arcs_iadd">
				<anchored to="arcs_iedit" position="lefthigh" offset="3,0" />
				<target>arcs</target>
				<script>
					function onInit()
						OptionsManager.registerCallback("ARCCOST", onCostUpdated)
						onCostUpdated();
					end
					function onClose()
						OptionsManager.unregisterCallback("ARCCOST", onCostUpdated)
					end
					function onCostUpdated()
						local nCost = CharManager.getCostToBuyNewCharacterArc(window.getDatabaseNode());
						setTooltipText(string.format(Interface.getString("char_tooltip_arc_add"), nCost));
					end
					function onButtonPress()
						if CharManager.buyNewCharacterArc(window.getDatabaseNode()) then
							super.onButtonPress()
						end
					end
				</script>
			</button_iadd>
		</sheetdata>
	</windowclass>

	<windowclass name="char_arc">
		<script file="campaign/scripts/char_arc.lua" />
		<sheetdata>
			<hn name="currentStage">
				<script>
					function onValueChanged()
						window.updateTitle()
						window.updateStageTooltips()
					end
				</script>
				<default>1</default>
				<min>1</min>
				<max>4</max>
			</hn>
			<hs name="name">
				<script>
					function onValueChanged()
						window.updateTitle()
					end
				</script>
				<empty textres="char_empty_arc" />
			</hs>

			<label name="title">
				<anchored>
					<top />
					<left />
					<right />
				</anchored>
				<center />				
			</label>

			<genericcontrol name="rightanchor">
				<anchored width="0" height="0">
					<top offset="2" />
					<right offset="-5" />
				</anchored>
			</genericcontrol>
			<button_idelete name="idelete">
				<anchored to="rightanchor" width="20" height="20">
					<top />
					<right relation="relative" anchor="left" />
				</anchored>
				<editmode>arcs_iedit</editmode>
			</button_idelete>
			<button_details name="button_editor">
				<anchored to="rightanchor">
					<top />
					<right relation="relative" anchor="left" offset="-5" />
				</anchored>
				<tooltip textres="char_tooltip_arc_editor" />
				<script>
					function onButtonPress()
						Interface.openWindow("record_arc", window.getDatabaseNode());
					end
				</script>
			</button_details>

			<genericcontrol name="icon">
				<anchored height="65" width="423">
					<top parent="title" anchor="bottom" offset="5" />
					<left/>
				</anchored>
				<icon>arc_opening</icon>
			</genericcontrol>
			<column_left name="left">
				<anchored to="icon" />
			</column_left>
			<column_right name="right">
				<anchored to="icon" />
			</column_right>

			<arc_stage_left name="opening">
				<anchored to="left" />
			</arc_stage_left>
			<arc_stage_right name="inprogress">
				<anchored to="left" />
			</arc_stage_right>
			<arc_stage_left name="climax">
				<anchored to="right" />
			</arc_stage_left>
			<arc_stage_right name="resolution">
				<anchored to="right" />
			</arc_stage_right>
		</sheetdata>
	</windowclass>
	
	<windowclass name="record_arc" copy="record_window">
		<placement>
			<size width="350" height="400" />
		</placement>
		<sizelimits>
			<minimum width="350" height="400" />
			<dynamic />
		</sizelimits>
		<script>
			function focusName()
				header.subwindow.focus();
			end

			function setTab(nIndex)
				tabs.activateTab(nIndex);
				local sTab = tabs.getTab(nIndex)

				if self[sTab] and self[sTab].subwindow and self[sTab].subwindow.focus then
					self[sTab].subwindow.focus()
				end
			end

			function addStep()
				Debug.chat(inprogress.subwindow)
				inprogress.subwindow.addStep();
			end
		</script>
		<minimize>minimized_reference</minimize>
		<sheetdata>
			<sub_record_header name="header">
				<class>arc_header</class>
			</sub_record_header>

			<subwindow_record name="opening">
				<class>record_arc_opening</class>
				<fastinit />
				<activate />
			</subwindow_record>
			<subwindow_record name="inprogress">
				<class>record_arc_inprogress</class>
				<fastinit />
				<noscroll />
			</subwindow_record>
			<subwindow_record name="climax">
				<class>record_arc_climax</class>
				<fastinit />
			</subwindow_record>
			<subwindow_record name="resolution">
				<class>record_arc_resolution</class>
				<fastinit />
			</subwindow_record>

			<tabs_recordsheet name="tabs">
				<tab>
					<icon>tab_opening</icon>
					<subwindow>opening</subwindow>
				</tab>
				<tab>
					<icon>tab_inprogress</icon>
					<subwindow>inprogress</subwindow>
				</tab>
				<tab>
					<icon>tab_climax</icon>
					<subwindow>climax</subwindow>
				</tab>
				<tab>
					<icon>tab_resolution</icon>
					<subwindow>resolution</subwindow>
				</tab>
			</tabs_recordsheet>
		</sheetdata>
	</windowclass>

	<windowclass name="arc_header">
		<margins control="0,0,0,5" />
		<script>
			function focus()
				name.setFocus();
			end
		</script>
		<sheetdata>
			<link_record_header name="link">
				<class>record_arc</class>
			</link_record_header>
			<anchor_record_header_right name="rightanchor" />
			<string_record_name name="name" />
		</sheetdata>
	</windowclass>

	<windowclass name="record_arc_opening">
		<script>
			function focus()
				opening.setFocus();
			end
		</script>
		<sheetdata>
			<anchor_column name="columnanchor" />

			<header_column name="header">
				<static textres="char_label_opening" />
				<center />
			</header_column>

			<ft_columnh name="opening">
				<anchored>
					<bottom offset="-5" />
					<right offset="-10" />
				</anchored>
			</ft_columnh>
			<scrollbar>
				<anchored to="opening" />
				<target>opening</target>
			</scrollbar>
		</sheetdata>
	</windowclass>

	<windowclass name="record_arc_inprogress">
		<script>
			function addStep()
				local w = steps.addEntry();
			end
		</script>
		<sheetdata>
			<anchor_column name="columnanchor" />

			<header_column name="header">
				<static textres="char_label_inprogress" />
				<center />
			</header_column>

			<list_column name="steps">
				<class>record_arc_step</class>
				<datasource>.steps</datasource>
				<sortby><control>order</control></sortby>
				<script>
					function addEntry()
						local nOrder = getHighestOrder() + 1;
						local w = createWindow();
						w.order.setValue(nOrder);
						w.step.setFocus();
						return w;
					end
					function getHighestOrder()
						local nHighest = 0;
						for _, w in pairs(getWindows()) do
							if w.order.getValue() &gt; nHighest then
								nHighest = w.order.getValue();
							end
						end
						return nHighest;
					end
				</script>
				<anchored>
					<bottom offset="-10" />
					<right offset="-10" />
				</anchored>
				<noscroll merge="delete" />
			</list_column>

			<scrollbar_list>
				<anchored to="steps" />
				<target>steps</target>
			</scrollbar_list>

			<button_iedit name="steps_iedit">
				<anchored to="header">
					<right offset="0"/>
					<top />
				</anchored>
				<edittarget>steps</edittarget>
			</button_iedit>
			<button_iadd name="steps_iadd">
				<anchored to="steps_iedit" position="lefthigh" offset="3,0" />
				<target>steps</target>
			</button_iadd>
		</sheetdata>
	</windowclass>

