<root>
	<windowclass name="flavor" copy="record_window">
		<minimize>minimized_reference</minimize>
		<sheetdata>
			<sub_record_header name="header">
				<class>flavor_header</class>
			</sub_record_header>

			<frame_record_content_tabbed name="contentframe" />
			<ft_record name="text">
				<anchored to="contentframe" position="over" />
			</ft_record>
			<subwindow_record name="content">
				<class>flavor_stats</class>
			</subwindow_record>

			<scrollbar_record>
				<target>text</target>
			</scrollbar_record>
			<scrollbar_record>
				<target>content</target>
			</scrollbar_record>

			<tabs_recordsheet name="tabs">
				<tab>
					<icon>tab_main</icon>
					<subwindow>text</subwindow>
				</tab>
				<tab>
					<icon>tab_other</icon>
					<subwindow>content</subwindow>
				</tab>
			</tabs_recordsheet>
		</sheetdata>
	</windowclass>

	<windowclass name="flavor_header">
		<margins control="0,0,0,7" />
		<script file="common/scripts/record_header_simple.lua" />
		<sheetdata>
			<link_record_header>
				<class>focus</class>
			</link_record_header>

			<anchor_record_header_right />
			<icon_record_locked />
			<button_record_locked />

			<string_record_name name="name" />
			<label_recordtype name="recordtype_label">
				<static textres="library_recordtype_ref_flavor" />
			</label_recordtype>
		</sheetdata>
	</windowclass>

	<windowclass name="flavor_stats">
		<margins control="0,0,0,2" />
		<script file="campaign/scripts/char_content_flavor_stats.lua" />
		<sheetdata>
			<anchor_column name="columnanchor" />

			<header_column name="abilities_header">
				<static textres="focus_header_abilities"/>
				<center />
			</header_column>
			<list_ref_ability name="abilities">
				<datasource>.abilities</datasource>
				<hidegiven /> 
			</list_ref_ability>
		</sheetdata>
	</windowclass>
</root>