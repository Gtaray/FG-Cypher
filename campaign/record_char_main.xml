					local sClass, sRecord = draginfo.getShortcutData();

					if StringManager.contains({"ability", "type", "descriptor", "focus", "flavor", "ancestry"}, sClass) then
						CharManager.addInfoDB(getDatabaseNode(), sClass, sRecord);
						return true;
					end
				end
			end
		</script>
