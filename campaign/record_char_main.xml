                </anchored>
                <color>ffffff</color>
                <static textres="might" />
            </label_column>

            <basicnumberc name="might_new">
                <anchored width="20" height="20">
                    <top parent="label_might" anchor="top" />
                    <right offset="-35" />
                </anchored>
                <readonly />
            </basicnumberc>
            <button_increase name="button_might_increase">
                <anchored to="might_new" position="lefthigh" offset="11,0" />
                <stat>might</stat>
            </button_increase>
            <button_decrease name="button_might_decrease">
                <anchored to="might_new" position="lefthigh" offset="37,0" />
                <stat>might</stat>
            </button_decrease>
            <basicnumber name="might_current" source="abilities.might.current">
                <anchored to="might_new" position="lefthigh" offset="68,0" width="20" height="20" />
                <readonly />
            </basicnumber>

            <!-- Speed Controls -->
            <label_column name="label_speed">
                <anchored width="150" height="20">
                    <top relation="relative" />
                    <left parent="columnanchor" anchor="left" />
