	<windowclass name="recovery">
		<frame>utilitybox</frame>
		<placement>
			<size width="350" height="350" />
		</placement>
		<script>
			function setRecoveryAmount(n)
				content.subwindow.setRecoveryAmount(n);
    		end
			function processOK()
				content.subwindow.apply();
				close();
			end
			function processCancel()
				close();
			end
		</script>
