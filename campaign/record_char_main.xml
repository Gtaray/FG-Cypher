            </button_increase>
            <button_decrease name="button_speed_decrease">
                <anchored to="speed_new" position="lefthigh" offset="37,0" />
                <stat>speed</stat>
            </button_decrease>
            <basicnumber name="speed_current" source="abilities.speed.current">
                <anchored to="speed_new" position="lefthigh" offset="68,0" width="20" height="20" />
