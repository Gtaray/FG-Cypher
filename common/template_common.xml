	<template name="label_charframetop_collapsible">
		<label_charframetop>
			<anchored to="contentanchor" height="20">
				<top relation="relative" offset="8" postoffset="8" />
				<left offset="15" />
				<right offset="-10" />
			</anchored>
			<script>
				local bCollapsed = false;
				local sControl
				function onInit()
					if super and super.onInit then
						super.onInit();
					end
					if target and target[1] then
						sControl = target[1];
					end
				end
				function onClickDown()
					return true;
				end
				function onClickRelease()
					if not sControl then return true; end

					self.toggle();
					return true;
				end
				function isCollapsed()
					return bCollapsed
				end
				function toggle(bShow)
					if not sControl then return; end

					local c = window[sControl];
					if not c then return true; end

					local bVisible = c.isVisible();
					if bShow ~= nil then
						bVisible = not bShow;
					end

					if bVisible then
						setFont("subwindowsmalltitle_disabled");
						c.setVisible(false);
						bCollapsed = true;
					else
						setFont("subwindowsmalltitle");
						c.setVisible(true);
						bCollapsed = false;
					end
				end
			</script>
		</label_charframetop>
	</template>

