<root>
	<windowclass name="damagetypes" copy="settings_list">
		<helplinkres>https://publish.obsidian.md/fantasygrounds-cypher-wiki/System/Damage+Types</helplinkres>
		<sheetdata>
			<windowtitlebar_utilitybox name="title">
				<resource>library_recordtype_label_damagetypes</resource>
			</windowtitlebar_utilitybox>

			<list_utility_setting name="list">
				<class>damagetype</class>
				<datasource>.</datasource>
			</list_utility_setting>

			<help_damagetypes />
		</sheetdata>
	</windowclass>

    <windowclass name="damagetype">
		<margins control="0,0,0,5" />
		<sheetdata>
			<anchor_listitem_left name="leftanchor" />

			<anchor_listitem_right name="rightanchor" />
			<button_listitem_idelete name="idelete">
				<editmode>list_iedit</editmode>
			</button_listitem_idelete>
			
			<string_listitem_center_text name="label" />
		</sheetdata>
	</windowclass>
</root>
